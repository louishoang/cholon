<% form = local_assigns.fetch(:form, nil) %>
<% view_mode = local_assigns.fetch(:view_mode, nil) %>

<div class="form-group <%= view_mode == 'shipping' ? 'm-t-20' : '' %>">
  <%= form.label :full_name, class: "col-sm-2 control-label info-title required" %>
  <div class="col-sm-10 nopadding">
    <div class="col-sm-6">
      <%= form.text_field :first_name, class: "form-control unicase-form-control text-input", placeholder: "First Name", "data-validation" => "required" %>
    </div>
    <div class="col-sm-6">
      <%= form.text_field :last_name, class: "col-xs-6 form-control unicase-form-control text-input", placeholder: "Last Name", "data-validation" => "required" %>
    </div>
  </div>
</div>
<div class="form-group">
  <%= form.label :business_name, class: "col-sm-2 control-label info-title" %>
  <div class="col-sm-10">
    <%= form.text_field :business_name, class: "form-control unicase-form-control text-input" %>
  </div>
</div>
<div class="form-group">
  <%= form.label :address1, class: "col-sm-2 control-label info-title required" %>
  <div class="col-sm-10">
    <%= form.text_field :address1, class: "form-control unicase-form-control text-input", placeholder: "123 1St", "data-validation" => "required" %>
  </div>
</div>
<div class="form-group">
  <%= form.label :address2, class: "col-sm-2 control-label info-title" %>
  <div class="col-sm-10">
    <%= form.text_field :address2, class: "form-control unicase-form-control text-input", placeholder: "Suite #3034" %>
  </div>
</div>
<div class="form-group">
  <%= form.label :city, class: "col-sm-2 control-label info-title required" %>
  <div class="col-sm-10">
    <%= form.text_field :city, class: "form-control unicase-form-control text-input", placeholder: "San Jose", "data-validation" => "required" %>
  </div>
</div>
<div class="form-group">
  <%= form.label :state, class: "col-sm-2 control-label info-title required" %>
  <div class="col-sm-10 nopadding">
    <div class="col-sm-6">
      <%= select_state "order[billing_address_attributes][state]", nil, {class: "form-control unicase-form-control text-input input-styling select2class col-sm-4 inner-top-3", prompt: t("Select State"), "data-validation" => "required"} %>
    </div>
    <div class="col-sm-6">
      <%= form.label :zip_code, class: "col-sm-4 control-label info-title required" %>
      <div class="col-sm-8">
        <%= form.text_field :zip_code, class: "form-control unicase-form-control text-input", placeholder: "95131", "data-validation" => "required" %>
      </div>
    </div>
  </div>
</div>