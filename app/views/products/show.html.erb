<div class="breadcrumb breadcrumb-unstyled">
  <div class="container">
    <div class="breadcrumb-inner">
      <ul class="list-inline list-unstyled nopadding">
        <li><a href="/"><%= t"Home" %></a></li>
        <li class=""><%= t"Stores" %></li>
        <li class="active"><%= @product.slug %></li>
      </ul>
    </div>
  </div>
</div>

<div class="body-content m-t-10">
  <div class="container-fluid nopadding">
    <div class="row-fluid single-product">
      <div class="col-md-5">
        <div class="product_gallery">
          <% @product.all_photos.each do |p| %>
            <a href="<%= p.photo.url(:detail) %>"><img src="<%= p.photo.url(:thumb) %>" /></a>
          <% end %>
        </div>
      </div>
      <div class="col-md-7 product-info-block m-t-10">
        <div class="row-fluid product-info">
          <h1 class="name"><%= @product.name %></h1>
          <div class="rating-reviews">
            <div class="prepend"><%= t"Seller Rating"%>: </span>
            <div class="rateit" data-rateit-value="5" data-rateit-ispreset="true" data-rateit-readonly="true"></div>
            <div class="reviews"><a href="#" class="lnk">(06 Reviews)</a></div>
          </div>
        </div>
        <div class="row-fluid">
          <div class="col-md-8 nopadding m-t-10">
            <div class="stock-container">
              <div class="stock-box">
                <span class="label"><%= t"Availability" %> :</span>
              </div>
              <div class="stock-box">
                <span class="value"><%= @product.condition %></span>
              </div>
            </div>
            <div class="price-container info-container m-t-20">
              <div class="row">
                <div class="col-sm-6">
                  <div class="price-box">
                    <span class="price"><%= number_to_currency(@product.price) %></span>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="favorite-button m-t-10">
                    <a class="btn btn-greylime" data-toggle="tooltip" data-placement="right" title="Wishlist" href="#">
                        <i class="fa fa-heart"></i>
                    </a>
                    <a class="btn btn-greylime" data-toggle="tooltip" data-placement="right" title="<%= t'Contact Seller' %>" href="#">
                      <i class="fa fa-envelope"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <div class="quantity-container info-container">
              <div class="row">  
                <div class="col-sm-2">
                  <span class="label"><%= t'Qty' %> :</span>
                </div>   
                <div class="col-sm-2">
                  <div class="cart-quantity">
                    <div class="quant-input">
                      <div class="arrows">
                        <div class="arrow plus gradient"><span class="ir"><i class="icon fa fa-sort-asc"></i></span></div>
                        <div class="arrow minus gradient"><span class="ir"><i class="icon fa fa-sort-desc"></i></span></div>
                      </div>
                      <input type="text" value="1">
                  </div>
                </div>
                </div>
                <div class="col-sm-7">
                  <a href="#" class="btn btn-greylime"><i class="fa fa-shopping-cart inner-right-vs"></i> ADD TO CART</a>
                </div>     
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <img src="http://placehold.it/200x200" data-echo="http://placehold.it/200x200" alt="ads">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>