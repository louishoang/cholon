<div class="row-fluid container-fluid nopadding">
  <div class="col-xs-12 columns">
    <div class="col-xs-12 col-lg-8 dash-left showroom-container">
      <div class="panel-title m-l-40">
        <%= t"Summary" %>
      </div>
      <div class="row m-t-10 m-l-20">
        <div class="col-xs-12 col-sm-4 col-md-4">
          <div class="pull-left col-sm-12 col-md-5 col-lg-4 b-icon-wrapper">
            <div class="big-icon blue">
              <i class="fa fa-bar-chart"></i>
            </div>
          </div>
          <div class="pull-left col-sm-12 col-md-7 col-lg-8 chart-value">
            <h4 class="title"><%= t"Sold" %></h4>
            <h3 class="value inline"><%= @statistic.first.sold_items_count %></h3>
            <% pending_count = @statistic.first.pending_items_count rescue 0 %>
            <% if pending_count.present? %>
              <span class="value-helper">(<%= pending_count %> pending)</span>
            <% end %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4">
          <div class="pull-left col-sm-12 col-md-5 col-lg-4 b-icon-wrapper">
            <div class="big-icon red">
              <i class="fa fa-eye"></i>
            </div>
          </div>
          <div class="col-sm-12 col-md-7 col-lg-8 chart-value">
            <h4 class="title"><%= t"Earned" %></h4>
            <h3 class="value"><%= number_to_currency(@statistic.first.earned_revenue) %></h3>
            
          </div>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4">
          <div class="pull-left col-sm-12 col-md-5 col-lg-4 b-icon-wrapper">
            <div class="big-icon orange">
              <i class="fa fa-barcode"></i>
            </div>
          </div>
          <div class="col-sm-12 col-md-7 col-lg-8 chart-value">
            <h4 class="title"><%= t"Pending" %></h4>
            <h3 class="value"><%= number_to_currency(@statistic.first.pending_revenue) %></h3>
          </div>
        </div>
      </div>
      <div id="dashboard-statistic" class="cl-flot m-t-10"></div>
    </div>
    <div class="col-xs-12 col-lg-4 dash-right">
      <div class="showroom-container">
        <div class="panel-title">
          By Category
        </div>
        <div id="dashboard-by-cat" class="cl-pie m-t-10"></div>
      </div>
    </div>
  </div>
</div>