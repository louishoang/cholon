<div class="body-content m-t-20" id="main-pd-index">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="col-xs-12 col-sm-12 col-md-3 sidebar">
        <div class="side-menu animate-dropdown">
          <div class="head"><i class="icon fa fa-align-justify fa-fw"></i> Categories</div>        
          <nav class="yamm megamenu-horizontal" role="navigation">
            <ul class="nav">

              <% Category.category_for_index_panel.each do |main_cat| %>
                <li class="dropdown menu-item">
                  <% if main_cat.all_sub_categories.size < 2 %>
                    <a href="<%= products_path(category: main_cat.id) %>"><i class="icon fa fa-desktop fa-fw"></i><%= t(main_cat.name) %></a>
                  <% else %>
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon fa fa-desktop fa-fw"></i><%= t(main_cat.name) %></a>
                    <ul class="dropdown-menu mega-menu">
                      <li class="yamm-content">
                        <div class="row">
                          <% main_cat.all_sub_categories.in_groups_of(3) do |_set| %>
                            <% _set.each do |_category| %>
                              <div class="col-sm-12 col-md-3">
                                <ul class="links list-unstyled">  
                                  <% if _category.present? %>
                                    <li><a href="<%= products_path(category: _category.id) %>"><%= _category.name %></a></li>
                                  <% end %>
                                </ul>
                              </div>
                            <% end %>
                          <% end %>
                        </div> 
                      </li>                 
                    </ul> 
                  <% end %>           
                </li> 
              <% end %>         
            </ul>
          </nav>
        </div>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-9 padding">
        <div class="row-fluid">
          <div id="owl-home" class="owl-carousel">
            <div class="item"><img src="assets/carousel_signup2.jpg"></div>
          </div>
        </div>
        <div class="row-fluid">
          <div class="info-boxes wow fadeInUp">
            <div class="info-boxes-inner">
              <div class="row">
                <div class="col-md-6 col-sm-4 col-lg-4">
                  <div class="info-box">
                    <div class="row">
                      <div class="col-xs-12">
                        <h4 class="info-box-heading green compact"><i class="icon fa fa-dollar"></i> 100% Satisfaction</h4>
                      </div>
                    </div>  
                    <h6 class="text">30 Day Money Back Guarantee.</h6>
                  </div>
                </div><!-- .col -->

                <div class="hidden-md col-sm-4 col-lg-4">
                  <div class="info-box">
                    <div class="row">
                      <div class="col-xs-12">
                        <h4 class="info-box-heading orange"><i class="icon fa fa-truck"></i>&nbsp;&nbsp;free shipping</h4>
                      </div>
                    </div>
                    <h6 class="text">on all orders of $99.00 or more</h6>  
                  </div>
                </div><!-- .col -->

                <div class="col-md-6 col-sm-4 col-lg-4">
                  <div class="info-box">
                    <div class="row">
                      <div class="col-xs-10">
                        <h4 class="info-box-heading red"><i class="icon fa fa-gift"></i>&nbsp;&nbsp;Special Sale</h4>
                      </div>
                    </div>
                    <h6 class="text">All items sale up to 20% off </h6> 
                  </div>
                </div><!-- .col -->
              </div><!-- /.row -->
            </div><!-- /.info-boxes-inner -->
            
          </div><!-- /.info-boxes -->
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="row-fluid hp-row">
          <h3 class="grey-text"><%= t"Today's Featured Products" %></h3>
        </div>
      </div>
    </div>
    <div class="row-fluid" id="feature-product-home">
      <div class="col-xs-12 col-sm-12 col-md-12 nopadding">
        <% @feature_products.in_groups_of(2).each do |pair| %>
          <div class="row-fluid">
            <div class="col-xs-12 col-sm-12 col-md-12 m-t-40 nopadding">
              <% pair.each do |fp| %>
                <% if fp.present? %>
                  <a href="<%= product_path(fp.slug)%>" class="no-decor">
                    <div class="col-xs-12 col-md-6 columns nopadding">
                      <div class="row-fluid">
                        <div class="col-xs-12 col-sm-12 col-md-12 m-t-20 nopadding">
                          <div class="col-xs-12 col-md-9 columns fp-9">
                            <%= image_tag(fp.featured_image, alt: fp.name, class: "feature-product-large") %>
                          </div>
                          <div class="col-xs-12 col-md-3 columns fp-3">
                            <% fp.featured_small_images.each_with_index do |_entity, index| %>
                              <div class="row-fluid">
                                <%= image_tag(_entity.photo(:featured_small), alt: fp.name, class: index > 0 ? "feature-product-small feature-product-mt" : "feature-product-small") %>
                              </div>
                            <% end %>
                          </div>
                        </div>
                      </div>
                      <div class="row-fluid single-product m-t-20">           
                        <div class="row-fluid product-info">
                          <div class="col-xs-12 col-md-9 columns fp-description product-description m-t-30">
                            <h1 class="name less-margin-bottom"><%= fp.name %></h1>
                            <div class="description-body">
                              <% description = ActionView::Base.full_sanitizer.sanitize(fp.description) %>
                              <%= description[0..200] %>
                              <% if description.size > 200 %>
                                <a href="<%= product_path(fp) %>" class="show-more">show more &raquo;</a>
                              <% end %>
                            </div>
                          </div>
                          <div class="col-xs-12 col-md-3 columns text-center">
                            <div class="fp-price"><%= number_to_currency(fp.price) %></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </a>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="col-xs-12 col-sm-12 col-md-12 m-t-40">
      <div class="row-fluid hp-row">
        <h3 class="grey-text"><%= t"Brands We Work With" %></h3>
      </div>
      <div class="row-fluid m-t-40">
        <div id="cl-brand" class="owl-carousel brand-slider custom-carousel owl-theme"> 
          <img data-echo="/assets/brands/brand1.png" src="assets/blank.gif" alt="">
          <img data-echo="/assets/brands/brand2.png" src="assets/blank.gif" alt="">
          <img data-echo="/assets/brands/brand3.png" src="/assets/blank.gif" alt="">
          <img data-echo="/assets/brands/brand4.png" src="/assets/blank.gif" alt="">
          <img data-echo="/assets/brands/brand5.png" src="/assets/blank.gif" alt="">      
          <img data-echo="/assets/brands/brand6.png" src="/assets/blank.gif" alt="">
          <img data-echo="/assets/brands/brand2.png" src="/assets/blank.gif" alt="">
          <img data-echo="/assets/brands/brand4.png" src="/assets/blank.gif" alt="">  
          <img data-echo="/assets/brands/brand1.png" src="/assets/blank.gif" alt="">
          <img data-echo="/assets/brands/brand5.png" src="/assets/blank.gif" alt="">
        </div> 
      </div>
    </div>
  </div>
</div>
